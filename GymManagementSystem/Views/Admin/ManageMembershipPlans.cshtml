@model IEnumerable<GymManagementSystem.Models.MembershipPlan>

<h2>Manage Membership Plans</h2>

<p>
    <a href="@Url.Action("CreateMembershipPlan", "Admin")" class="btn btn-primary">Create New Plan</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Plan Name</th>
            <th>Description</th>
            <th>Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var plan in Model)
        {
            <tr>
                <td>@plan.Name</td>
                <td>@plan.Details</td>
                <td>@plan.Cost</td>
                <td>
                    <a href="@Url.Action("EditMembershipPlan", "Admin", new { id = plan.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteMembershipPlan", "Admin", new { id = plan.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this plan?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
