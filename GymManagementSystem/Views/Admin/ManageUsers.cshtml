@model IEnumerable<GymManagementSystem.Models.User>

<h2>Manage Users</h2>

<p>
    <a href="@Url.Action("CreateUser", "Admin")" class="btn btn-primary">Create User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>
                    <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
